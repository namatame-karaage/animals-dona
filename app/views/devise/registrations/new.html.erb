<section class="new">
  <div class="side-header">
    <div class="side-header__top">
      <%= link_to root_path, class: "header__top-text"  do %>
        <span class="header__animals">Animals</span>
        <span class="header__domi">Domi</span>
      <% end %>
      <div class="side-header__i">
        <i class="fab fa-themeisle icon"></i>
        <%= link_to "トップへ戻る", root_path , class: "side-header__btn"%>
      </div>
      <div class="side-header__i">
        <i class="fas fa-paw icon"></i>
        <%= link_to "ログイン", new_user_session_path, class: "side-header__btn" %>
      </div>
    </div>
  </div>

  <div class="signup-in">
    <h2 class="signup-in__title">寄付・入会のお願い</h2>
    <p class="signup-in__text">お手数ですがご登録お願いします</p>
      <div class="signup-in__box">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="field">
            <%= f.label :username, "お名前", class: "field__name" %><br />
            <%= f.text_field :username,autofocus: true, autocomplete: "username", class: "field__inner" %>
          </div>

          <div class="field">
            <%= f.label :age, "年齢", class: "field__name"  %><br />
            <%= f.select :age, [["10代", "10代"], ["20代", "20代"], ["30代", "30代"], ["40代", "40代"], ["50代", "50代"], ["60代", "60代"],["70代以上","70代以上"]], {include_blank: "選択して下さい"}, class: "field__inner" %>
          </div>

          <div class="field">
            <%= f.label :email,"メールアドレス" class: "field__name"  %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "field__inner" %>
          </div>

          <div class="field">
            <%= f.label :password, class: "field__name"  %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> 文字以上 半角英数字)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password", class: "field__inner" %>
          </div>

          <div class="field">
            <%= f.label :password_confirmation , class: "field__name" %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "field__inner" %>
          </div>

          <div class="actions">
            <%= f.submit "登録完了", class: "field__btn solid" %>
          </div>
        <% end %>
      <%= render 'devise/sessions/testuser'%>
    </div>
  </div>

</section>
